---
import Container from '../Container.astro';
import Link from '@components/ui/link.astro';
import { Astronav, MenuItems, MenuIcon } from 'astro-navbar';

const menuitems = [
  {
    title: 'Home',
    path: '/',
  },
  {
    title: 'About us',
    path: '/about',
  },
  {
    title: 'Portfolio',
    path: '#',
  },
  {
    title: 'News',
    path: '#',
  },
  {
    title: 'Contact us',
    path: '#',
  },
];
---

<Container>
  <header class="flex flex-col md:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full md:w-auto items-center justify-between">
        <a href="/" class="text-md"
          ><span class="font-bold text-slate-50">Logo</span>
        </a>
        <div class="block md:hidden">
          <MenuIcon class="w-7 h-7 text-white" />
        </div>
      </div>
      <MenuItems class="hidden w-full md:w-auto mt-2 md:flex md:mt-0">
        <ul class="flex flex-col md:flex-row md:gap-3">
          {
            menuitems.map((item) => (
              <>
                {
                  <li>
                    <a
                      href={item.path}
                      class="flex md:px-3 py-2 items-center text-white relative max-w-fit pr-3 md:pr-0 
                      after:bg-orange-600  after:absolute after:h-1 after:w-0 after:bottom-0 after:left-0 
                      hover:after:w-full after:transition-all after:duration-300">
                      <span> {item.title}</span>
                    </a>
                  </li>
                }
              </>
            ))
          }
        </ul>
        <!-- <div class="md:hidden flex items-center mt-3 gap-4">
          <Link href="#" style="secondary" block size="md">SE ALL</Link>
          <Link href="#" size="md" block>Get more details</Link>
        </div> -->
      </MenuItems>
    </Astronav>
    <!-- <div>
      <div class="hidden md:flex items-center gap-4">
        <a href="#">Log in</a>
        <Link href="#" size="md">Sign up</Link>
      </div>
    </div> -->
  </header>
</Container>
